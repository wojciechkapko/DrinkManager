@page
@using DrinkManagerWeb.Resources
@using Microsoft.Extensions.Localization
@model PersonalDataModel
@inject IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = @L["PersonalData"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@L["YourAccountContainsPersonalDataThatYouHaveGivenUs"]. @L["ThisPageAllowsYouToDownloadOrDeleteThatData"].</p>
        <p>
            <strong>@L["DeletingThisDataWillPermanentlyRemoveYourAccount"].</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@L["Download"]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@L["Delete"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}