@page
@using DrinkManagerWeb.Resources
@using Microsoft.Extensions.Localization
@model LoginWithRecoveryCodeModel
@inject IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = @L["RecoveryCodeVerification"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    @L["YouHaveRequestedToLogInWithARecoveryCode"]. @L["ThisLoginWillNotBeRememberedUntilYouProvide"].
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@L["Login"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
