@model DrinkManager.API.Models.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Administration - Create Role";
    Layout = "_LayoutAdmin";
}
<h2>Create Role</h2>
<hr />
<form asp-action="CreateRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="control-label col-form-label text-md-right col-md-1"></label>
        <div class="col-md-9">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-1 col-auto">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Roles" class="btn btn-secondary">Back</a>
        </div>
    </div>
</form>
